{
  "name": "...Fit To Print",
  "version": "0.1",
  "icons": { "128": "icon.png" },
  "description": "Automatically redirect to print pages on news sites, right now just nytimes.com.",
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "...Fit to Print"
  },  
  "content_scripts": [
    {
      "matches": ["http://www.nytimes.com/*"],
      "js": ["jquery.js", "fit_to_print.js"],
      "run_at": "document_start"
    }
  ]
}